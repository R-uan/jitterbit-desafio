generator client {
  provider   = "prisma-client"
  output     = "../src/database/prisma/generated"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  userId       Int     @id @default(autoincrement())
  email        String  @unique
  passwordHash String
  firstName    String
  lastName     String
  orders       Order[]

  @@map("users")
}

model Order {
  orderId      String   @id
  userId       Int
  value        Int
  creationDate DateTime

  items Item[]
  user  User   @relation(fields: [userId], references: [userId])

  @@map("orders")
}

model Item {
  productId Int
  orderId   String
  quantity  Int
  price     Float

  order Order @relation(fields: [orderId], references: [orderId])

  @@id([productId, orderId])

  @@map("items")
}
