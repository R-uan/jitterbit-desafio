generator client {
  provider = "prisma-client"
  output   = "../src/database/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  orderId      String   @id
  value        Int
  creationDate DateTime
  items        Item[]
}

model Item {
  productId Int
  orderId   String
  quantity  Int
  price     Float

  order Order @relation(fields: [orderId], references: [orderId])

  @@id([productId, orderId])
}
